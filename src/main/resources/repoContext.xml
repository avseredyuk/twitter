<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="ua.rd.twitter.repository"/>

    <bean name="user1" class="ua.rd.twitter.domain.User">
        <constructor-arg index="0" value="vasya"/>
        <constructor-arg index="1" value="14"/>
    </bean>

    <bean name="user2" class="ua.rd.twitter.domain.User">
        <constructor-arg index="0" value="petya"/>
        <constructor-arg index="1" value="16"/>
    </bean>

    <bean name="timeline1" class="ua.rd.twitter.domain.Timeline">
        <constructor-arg index="0" ref="timeline1tweets"/>
        <constructor-arg index="1" ref="user1"/>
    </bean>

    <bean name="timeline2" class="ua.rd.twitter.domain.Timeline">
        <constructor-arg index="0" ref="timeline2tweets"/>
        <constructor-arg index="1" ref="user2"/>
    </bean>

    <bean id="testTimelines" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="timeline1"/>
                <ref bean="timeline2"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="testUsers" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="user1"/>
                <ref bean="user2"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="timeline2tweets" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="tweet4"/>
                <ref bean="tweet5"/>
                <ref bean="tweet6"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="timeline1tweets" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="tweet1"/>
                <ref bean="tweet2"/>
                <ref bean="tweet3"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="testTweets" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="tweet1"/>
                <ref bean="tweet2"/>
                <ref bean="tweet3"/>
                <ref bean="tweet4"/>
                <ref bean="tweet5"/>
                <ref bean="tweet6"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="tweet1" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user1"/>
        <constructor-arg index="1" value="Hello I'm vasya"/>
        <constructor-arg index="2" value="0"/>
    </bean>
    <bean name="tweet2" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user1"/>
        <constructor-arg index="1" value="Vasya rocks"/>
        <constructor-arg index="2" value="1"/>
    </bean>
    <bean name="tweet3" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user1"/>
        <constructor-arg index="1" value="Vasyliy made 3 tweets"/>
        <constructor-arg index="2" value="2"/>
    </bean>
    <bean name="tweet4" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user2"/>
        <constructor-arg index="1" value="Well I'm Petro"/>
        <constructor-arg index="2" value="3"/>
    </bean>
    <bean name="tweet5" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user2"/>
        <constructor-arg index="1" value="petya poel"/>
        <constructor-arg index="2" value="4"/>
    </bean>
    <bean name="tweet6" class="ua.rd.twitter.domain.Tweet">
        <constructor-arg index="0" ref="user2"/>
        <constructor-arg index="1" value="repost iz instagrama"/>
        <constructor-arg index="2" value="5"/>
    </bean>
       
</beans>